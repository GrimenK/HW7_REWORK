<?xml version="1.0" encoding="UTF-8"?>
<Configuration name="ConfigTask">

    <Properties>
        <Property name="logger" value="logs_folder"/>
    </Properties>

    <Appenders>
        <Console name="ConsoleAppender">
            <PatternLayout pattern="{%-5level} %m %n"/>
        </Console>
    </Appenders>

    <Loggers>
        <Root level="all">
            <AppenderRef ref="ConsoleAppender" level="all"/>
        </Root>
    </Loggers>

</Configuration>